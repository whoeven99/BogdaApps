{% if request.page_type == 'product' %}
  <script id="ciwi-bundles-config" type="application/json">
    {
      "shopifyDomain": "{{ shop.domain }}",
      "moneyFormat": "{{ shop.money_format }}",
      "productId": {{ product.id }},
      "variantIds": [
        {% for item in product.variants %}
          {{ item.id }}{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ],
      "marketId": {{ localization.market.id }},
      {% for item in product.variants %}
        "{{ item.id }}": {
          "available": {{ item.available | default: false }},
          "inventoryQuantity": {{ item.inventory_quantity | default: 0 }},
          "inventoryPolicy": {{ item.inventory_policy | json }}
        },
      {% endfor %}
      {% for item in shop.metafields.ciwi_bundles_config %}
        "{{ item[0] }}": {{ item[1].value | json }},
      {% endfor %}
      "compareAtPrice": {{ product.variants[0].compare_at_price | json }},
      "price": {{ product.variants[0].price | json }},
      "currencySymbol": "{{ localization.country.currency.symbol }}"
    }
  </script>
  <script type="module" src="{{ 'ciwi-bundle-if-add-to-dom.js' | asset_url }}" defer></script>
  <link rel="stylesheet" href="{{ 'ciwi-bundle-if-add-to-dom.css' | asset_url }}">
{% endif %}

{% schema %}
  {
    "name": "Ciwi Bundle",
    "target": "compliance_head"
  }
{% endschema %}