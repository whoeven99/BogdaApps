{% if request.page_type == 'product' %}
  <script id="ciwi-bundles-config" type="application/json">
    {
      "shopifyDomain": "{{ shop.domain }}",
      "productId": {{ product.id }},
      "storefrontAccessToken": "{{ app.metafields.tokens.storefront }}",
      "variantId": {{ product.variants[0].id }},
      "marketId": {{ localization.market.id }},
      "metafields": [{% for item in shop.metafields.ciwi_bundles_config %}
          "{{ item[0] }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}],
      "compareAtPrice": {{ product.variants[0].compare_at_price | json }},
      "price": {{ product.variants[0].price | json }},
      "currencySymbol": "{{ localization.country.currency.symbol }}"
    }
  </script>
  <script type="module" src="{{ 'ciwi-bundle-if-add-to-dom.js' | asset_url }}"></script>
  <link rel="stylesheet" href="{{ 'ciwi-bundle-if-add-to-dom.css' | asset_url }}">
{% endif %}

{% schema %}
  {
    "name": "Ciwi Bundle",
    "target": "compliance_head"
  }
{% endschema %}